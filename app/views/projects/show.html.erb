<p id="notice"><%= notice %></p>


<div class="card">
  <div class="card-header">
    <div class="row">
      <div class="col">
        <h3 class="card-title">Project Name: <%= @project.name %> </h3>
        <h5 class="card-subtitle"><%=link_to "Owner team: " + @team.name, team_path(@team.id) %></h5>
      </div>

      <div class="col-2">
        <%= link_to 'Edit', edit_project_path(@project), :class => "btn btn-warning"%>
        <%= link_to 'Delete', @project, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger" %>
      </div>

    </div>

  </div>
  <div class="card-body">
    <div>

    </div>
    <h3 class="card-title">Description:</h3>
    <p class="card-text">
      <%= @project.description %>
    </p>
    <h5 class="card-title">Project status: <%= @project_statuses_map[@project.status_id]%>
    </h5>

  </div>
  <div class="card-footer">
    <h6>Due date: <%= @project.due_date %></h6>
  </div>

  <%= link_to 'Back', projects_path, :class => "btn btn-danger" %>
</div>



