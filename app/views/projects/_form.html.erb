<%= form_with(model: project) do |form| %>
  <% if project.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(project.errors.count, "error") %> prohibited this project from being saved:</h2>

      <ul>
        <% project.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name, :class => "form-label" %>
    <%= form.text_field :name, :class => "form-control"%>
  </div>

  <div class="field">
    <%= form.label :description, :class => "form-label" %>
    <%= form.text_area :description, :class => "form-control" %>
  </div>

  <div class="field">
    <%= form.label :team_id, :class => "form-label" %>
    <%= collection_select(:project, :team_id, Team.all, :id, :name ) %>
  </div>

  <div class="field">
    <%= form.label :status_id, :class => "form-label" %>
    <%= collection_select(:project, :status_id, ProjectStatus.all, :id, :projectStatus) %>
  </div>

  <div class="field">
    <%= form.label :due_date, :class => "form-label" %>
    <%= form.datetime_select :due_date, :class => "form-control" %>
  </div>

  <div class="actions">
    <%= form.submit :class => "btn btn-primary" %>
  </div>
<% end %>
